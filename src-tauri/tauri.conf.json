{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "relaypulse",
  "version": "0.1.0",
  "identifier": "com.liyiyang.relaypulse",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5180",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RelayPulse Monitor",
        "width": 520,
        "height": 320,
        "minWidth": 80,
        "minHeight": 80,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "resizable": true,
        "skipTaskbar": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
